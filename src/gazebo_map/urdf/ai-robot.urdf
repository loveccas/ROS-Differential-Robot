<?xml version="1.0"?>
<robot name="ai-robot">

  <!-- *************************************************** -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
      <origin xyz="0 0 0" rpy="0 0 3.14"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 3.14"/>
    </collision>
    <inertial>    <!-- 惯性矩阵如何确定 -->
      <mass value="5.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0"
               iyy="0.05" iyz="0.0"
               izz="0.1"/>
    </inertial>
  </link>
<!-- *************************************************** -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.03"/> <!-- 轮宽0.05m，半径0.1m -->
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/> <!-- 黑色 -->
      </material>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.01" radius="0.03"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="0.8"/> <!-- 轮子质量0.8kg -->
      <inertia ixx="0.004" ixy="0.0" ixz="0.0"
               iyy="0.004" iyz="0.0"
               izz="0.008"/> <!-- 圆柱转动惯量 I=(1/2)mr² -->
    </inertial>
  </link>
    <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.03"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.01" radius="0.03"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0"
               iyy="0.004" iyz="0.0"
               izz="0.008"/>
    </inertial>
  </link>
<!-- *************************************************** -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.09823 -0.017729 -0.03" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="0.05" friction="0.01"/>
  </joint>
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.09823 -0.017729 -0.03" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="0.05" friction="0.01"/>
  </joint>
<!-- *************************************************** -->

<!-- *************************************************** -->
  <link name="caster_wheel">
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0"
               iyy="0.0005" iyz="0.0"
               izz="0.0005"/>
    </inertial>
  </link>

  <link name="caster_wheel_1">
    <visual>
      <geometry>
         <cylinder length="0.001" radius="0.001"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.001" radius="0.001"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0"
               iyy="0.0005" iyz="0.0"
               izz="0.0005"/>
    </inertial>
  </link>
<!-- *************************************************** -->
  <joint name="caster_joint_1" type="continuous">
    <parent link="base_link"/>
    <child link="caster_wheel_1"/>
    <origin xyz="0.0 0.085 0.0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1"/>
  </joint>
  <joint name="caster_joint_2" type="continuous">
    <parent link="caster_wheel_1"/>
    <child link="caster_wheel"/>
    <origin xyz="0.0 0.0 -0.05" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="0.1"/>
  </joint>
  <!-- ********************激光雷达******************************* -->

  <link name="laser_link">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.05"/> <!-- 雷达主体：长0.03m，半径0.05m -->
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/> <!-- 红色便于识别 -->
      </material>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.03" radius="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/> <!-- 雷达质量0.5kg -->
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
               iyy="0.0001" iyz="0.0"
               izz="0.0002"/> <!-- 轻量化转动惯量 -->
    </inertial>
  </link>

  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
  </joint>

  <gazebo reference="laser_link">
    <sensor type="ray" name="laser_scan">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>30</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.5708</min_angle>
            <max_angle>1.5708</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>5.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="gazebo_ros_laser" filename="libgazebo_ros_laser.so">
        <topicName>/scan</topicName>
        <frameName>laser_link</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <!-- ***********************相机**************************** -->
  <link name="camera_link">
    <inertial>
        <mass value="0.01" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.01"/> 
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
      <origin xyz="0 0 0" rpy="0 0 1.5708"/>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0 -0.08 0.055" rpy="0 0 0"/>
  </joint>

  <gazebo reference="camera_link">
      <sensor type="camera" name="camera_sensor">
          <update_rate>30</update_rate>
          <camera>
              <horizontal_fov>2.095</horizontal_fov>
              <width>640</width>
              <height>480</height>
          </camera>
          <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
              <topicName>/image_raw</topicName>
              <frameName>camera_link</frameName>
          </plugin>
      </sensor>
  </gazebo>
  <!-- *************************************************** -->
  <gazebo reference="base_link">
    <mu1>0.5</mu1> <!-- 静摩擦系数 -->
    <mu2>0.5</mu2> <!-- 动摩擦系数 -->
    <kp>10000000.0</kp> <!-- 刚度系数 -->
    <kd>5000.0</kd> <!-- 阻尼系数 -->
  </gazebo>

  <!-- <gazebo reference="left_wheel"> -->
    <!-- <mu1>0.3</mu1> 静摩擦系数 -->
    <!-- <mu2>0.3</mu2> 动摩擦系数 -->
    <!-- <kp>10000000.0</kp> 刚度系数 -->
    <!-- <kd>5000.0</kd> 阻尼系数 -->
  <!-- </gazebo> -->


<!-- *************************************************** -->
  <gazebo>
    <plugin name="gazebo_ros_diff_drive" filename="libgazebo_ros_diff_drive.so">
      <leftJoint>left_wheel_joint</leftJoint>
      <rightJoint>right_wheel_joint</rightJoint>
      <wheelSeparation>0.19646</wheelSeparation>
      <wheelDiameter>0.03</wheelDiameter>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame> 
      <robotBaseFrame>base_link</robotBaseFrame> 
    </plugin>
  </gazebo>
</robot>
